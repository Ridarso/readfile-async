{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2017"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "build",
    "sourceMap": false,
    "declaration": false,
    "removeComments": true,
    "types": [
      "node"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
